  <main class="container">
    <h2 style="text-align:center; color:#004080; margin-top:2rem;">Accessibility Analysis Result</h2>
    <% if (result.issues && result.issues.length > 0) { %>
      <div class="grid">
        <% result.issues.forEach(function(issue, index) { %>
          <div class="column">
            <div class="card border-danger h-100">
              <div class="card-header bg-danger text-white">Issue <%= index + 1 %></div>
              <div class="card-body">
                <p><%= issue.issue %></p>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="card border-success h-100">
              <div class="card-header bg-success text-white">Solution</div>
              <div class="card-body">
                <p><%= issue.solution %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-issues">No major accessibility issues found âœ…</div>
    <% } %>
